<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f8f8f8"
    android:orientation="vertical">
    <!--标题-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@mipmap/bg_top">
        <RelativeLayout
            android:id="@+id/backRl"
            android:clickable="true"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:background="@drawable/color_btn_00000000"
            android:gravity="center"
            android:layout_width="55dp"
            android:layout_height="55dp">
            <ImageView
                android:scaleType="center"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrow_left_title"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="标题"
            android:textColor="@color/c_ffffff"
            android:textSize="17sp" />
    </RelativeLayout>

    <cn.com.myframe.view.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="7dp"
            android:paddingRight="7dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sharp_rectangle_eeeeee"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:textColor="@color/c_070c0f"
                    android:textSize="15sp" />
                <EditText
                    android:id="@+id/nameEt"
                    android:textSize="15sp"
                    android:hint="@string/name_hint"
                    android:textColor="@color/c_070c0f"
                    android:textColorHint="@color/c_b9b9b9"
                    android:background="@color/c_00000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:maxLength="50"
                    android:layout_marginLeft="17dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sharp_rectangle_eeeeee"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/company"
                    android:textColor="@color/c_070c0f"
                    android:textSize="15sp" />
                <EditText
                    android:id="@+id/companyEt"
                    android:textSize="15sp"
                    android:hint="@string/company_hint"
                    android:textColor="@color/c_070c0f"
                    android:textColorHint="@color/c_b9b9b9"
                    android:background="@color/c_00000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:maxLength="50"
                    android:layout_marginLeft="17dp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sharp_rectangle_eeeeee"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tel"
                    android:textColor="@color/c_070c0f"
                    android:textSize="15sp" />
                <EditText
                    android:id="@+id/telEt"
                    android:textSize="15sp"
                    android:hint="@string/tel_hint"
                    android:textColor="@color/c_070c0f"
                    android:textColorHint="@color/c_b9b9b9"
                    android:background="@color/c_00000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:maxLength="50"
                    android:layout_marginLeft="17dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sharp_rectangle_eeeeee"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:textColor="@color/c_070c0f"
                    android:textSize="15sp" />
                <EditText
                    android:id="@+id/emailEt"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:maxLength="50"
                    android:textColor="@color/c_070c0f"
                    android:hint="@string/email_hint"
                    android:textColorHint="@color/c_b9b9b9"
                    android:background="@color/c_00000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="8dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_b9b9b9"
                android:text="@string/regist_tip"
                android:textSize="13sp"/>

            <Button
                android:id="@+id/submitRegistBtn"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:gravity="center"
                android:background="@drawable/blue_btn"
                android:text="@string/submit_regist"
                android:textColor="@drawable/btn_text_color_ffffff"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

        </LinearLayout>
    </cn.com.myframe.view.BounceScrollView>

</LinearLayout>
